---
interface Props {
  title?: string;
  description: string;
}

const { title = "SOC Week '23-'24", description } = Astro.props;

import "../styles/base.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:url" content="https://iacademy-socw.netlify.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="SOC Week '23-'24" />
    <meta
      property="og:description"
      content="The Future of Computing through Game-Changing Innovations"
    />
    <meta
      property="og:image"
      content="https://iacademy-socw.netlify.app/images/preview.png"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-[#020213] text-white">
    <slot />
  </body>
</html>
