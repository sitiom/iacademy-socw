---
import { Image } from "astro:assets";
import "@fontsource-variable/source-code-pro";
import BaseLayout from "../layouts/BaseLayout.astro";
import heroLogo from "../images/hero-logo.png";
import Countdown from "../components/Countdown";
---

<BaseLayout
  description="Meta description. Here goes your page description. Provide a clear and concise summary of the content."
>
  <div class="flex flex-col items-center">
    <section
      class="container flex flex-col items-center justify-center gap-4 px-6 py-14 md:flex-row md:gap-0"
    >
      <div class="text-center md:w-[40rem] md:text-left">
        <h1 class="font-mono">
          &lt;<span class="text-[#04FEE1]">SCHOOL OF COMPUTING WEEK</span>
          <span class="text-[#CD81FF]">2024</span>/&gt;
        </h1>
        <p class="font-['Akira_Expanded'] text-xl sm:text-2xl md:text-5xl">
          The Future of Computing through Game-Changing Innovations
        </p>
      </div>
      <Image src={heroLogo} alt="School of Computing Week 2024" width={350} />
    </section>
    <Countdown client:only="react" />
  </div>
</BaseLayout>
