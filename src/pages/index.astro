---
import { Image } from "astro:assets";
import "@fontsource-variable/source-code-pro";
import BaseLayout from "../layouts/BaseLayout.astro";
import heroLogo from "../images/hero-logo.png";
import Countdown from "../components/Countdown";
---

<BaseLayout
  description="Meta description. Here goes your page description. Provide a clear and concise summary of the content."
>
  <div class="flex flex-col items-center">
    <section
      class="container flex flex-col items-center justify-center gap-4 px-6 py-14 md:flex-row md:gap-0 lg:max-w-[60rem]"
    >
      <div class="text-center md:w-auto md:text-left">
        <h1 class="font-mono">
          &lt;<span class="text-[#04FEE1]">SOCWeek</span>
          <span class="text-[#CD81FF]">2024</span>/&gt;
        </h1>
        <p
          class="text-pretty font-['Akira_Expanded'] leading-none ~text-2xl/5xl"
        >
          The Future of Computing through Game-Changing Innovations
        </p>
      </div>
      <Image
        src={heroLogo}
        alt="School of Computing Week 2024"
        class="~md:~w-52/80"
      />
    </section>
    <Countdown client:only="react" />
  </div>
</BaseLayout>
