---
interface Props {
  name: string;
  position: string;
  aboutMe: string;
  linkedin: string;
  github: string;
  profileImage: string;
}

const { name, position, aboutMe, linkedin, github, profileImage } = Astro.props;

import "../styles/card.css";
---

<div class="outer-container">
  <div class="card-container">
    <div class="description">
      <h1>{name}</h1>
      <h2>{position}</h2>
      <p>{aboutMe}</p>
      <div class="icons">
        <a href={linkedin} class="hover-text" target="_blank">
          <span class="tooltip-text" id="fade"> LinkedIn </span>
          <i class="bi bi-linkedin"></i>
        </a>
        <a href={github} class="hover-text" target="_blank">
          <span class="tooltip-text" id="fade"> GitHub </span>
          <i class="bi bi-github"></i>
        </a>
        <a href="#" class="hover-text" target="_blank">
          <span class="tooltip-text" id="fade"> Resume </span>
          <i class="bi bi-file-earmark-arrow-down"></i>
        </a>
      </div>
    </div>
    <div class="image">
      <img src={profileImage} alt="" />
    </div>
  </div>
</div>
