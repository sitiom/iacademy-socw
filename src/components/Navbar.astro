---
const links = [
  { href: "/", text: "Home" },
  // { href: "/expo", text: "EXPO" },
];
---

<header
  class="sticky top-0 z-40 mx-auto bg-[#020213] font-mono"
  data-aw-sticky-header=""
  id="header"
>
  <div
    class="just mx-auto flex w-full max-w-7xl items-center justify-between p-6"
  >
    <img
      src="/images/logo-long.png"
      width="150"
      alt="School of Computing Week 2024"
    />
    <nav aria-label="Main navigation" class="flex w-auto items-center">
      <ul class="flex justify-center text-lg font-medium text-[#e5ecf6]">
        {
          links.map(({ href, text }) => (
            <li>
              <a href={href} class="px-4 py-3 hover:text-white">
                {text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
